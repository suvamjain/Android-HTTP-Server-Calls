<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="18dp"
        android:background="@drawable/new_login_gradients"
        android:orientation="vertical"
        android:id="@+id/activity_main"
        tools:context="suvamjain.example.com.jsonservercalls.MainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!-- Here you can put your logo or brand name -->

                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/cloud_braces"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_person_white_24dp"
                        android:padding="8dp"
                        android:drawablePadding="12dp"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:background="@android:color/transparent"
                        android:layout_weight="3"
                        android:text="Registration Number"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/regno"
                        android:background="@android:color/transparent"
                        android:textAlignment="center"
                        android:maxLength="4" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f9d7db" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/signal_variant"
                        android:padding="8dp"
                        android:drawablePadding="12dp"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:background="@android:color/transparent"
                        android:layout_weight="3"
                        android:text="Mac Address"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:ems="10"
                        android:textStyle="bold"
                        android:padding="4dp"
                        android:id="@+id/mac"
                        android:background="@android:color/transparent"/>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f9d7db" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_login"
                    android:text="Get Response From Server"
                    android:textColor="#f16f7d"
                    android:textAllCaps="false"
                    android:padding="16dp"
                    android:id="@+id/get"
                    android:clickable="true"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_marginTop="34dp"
                    android:textSize="18sp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_signup"
                    android:text="Clear Fields"
                    android:onClick="reset"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColor="#fff"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:layout_marginTop="26dp"
                    android:clickable="true"
                    android:padding="16dp"/>

            </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/fab_margin"
            android:onClick="animate"
            android:visibility="gone"
            android:src="@drawable/filter"
            app:borderWidth="0dp"
            app:fabSize="normal" />

    </RelativeLayout>

</LinearLayout>

